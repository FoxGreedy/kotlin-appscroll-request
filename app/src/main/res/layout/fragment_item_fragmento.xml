<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ItemFragmento"
android:layout_marginTop="10dp"
android:layout_marginLeft="10dp"
android:background="#888888">

    <android.support.constraint.ConstraintLayout android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/tv_id"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/tv_nome" app:layout_constraintTop_toBottomOf="@id/tv_id"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_email" app:layout_constraintTop_toBottomOf="@id/tv_nome"
        android:textColor="#0000FF"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>